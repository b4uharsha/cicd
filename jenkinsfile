pipeline {
    agent any

    environment {
        GOOGLE_APPLICATION_CREDENTIALS = credentials('gcp-service-account') // Jenkins credential for GCP JSON key
    }

    stages {
        stage('Ansible Setup') {
            steps {
                script {
                    dir('ansible') {
                        // Install required Ansible dependencies (if any)
                        sh 'ansible-galaxy install -r requirements.yml --force'
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    dir('ansible') {
                        // Run the Ansible playbook to list GCP resources
                        sh 'ansible-playbook playbook.yml'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }

        failure {
            echo 'Pipeline failed.'
        }
    }
}
