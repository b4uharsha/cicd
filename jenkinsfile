pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from the repository
                echo 'Checking out source code from GitHub...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Example of a build step, replace with actual commands (e.g., npm install, mvn package)
                sh 'echo "Simulating build process"'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Example of running tests, replace with actual test command (e.g., npm test, mvn test)
                sh 'echo "Simulating test process"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                // Example of deployment step, replace with actual deployment commands
                sh 'echo "Simulating deployment process"'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            deleteDir() // Clean up the workspace after the pipeline
        }

        success {
            echo 'Pipeline completed successfully!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}

